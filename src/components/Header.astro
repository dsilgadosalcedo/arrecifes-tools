---
import { Image } from "astro:assets"

const { subPage } = Astro.props
---

<header
	class='px-4 sm:px-8 md:px-16 lg:px-32 md:mt-4 w-full h-20 z-40 flex items-center justify-between backdrop-blur-md rounded-b-2xl sticky top-0'
>
	<div class='flex gap-4 items-center'>
		<a href='/'>
			<Image
				src='/icons/logo.svg'
				alt='Logo de Arrecife'
				width={50}
				height={50}
			/>
		</a>
		{
			subPage && (
				<a
					href={`/${subPage.toLocaleLowerCase()}`}
					class='hidden sm:inline-block text-2xl font-splineSans-bold'
				>
					{subPage}
				</a>
			)
		}
	</div>
