---
import { Image } from "astro:assets"

const { subPage } = Astro.props
---

<header
	class='px-4 sm:px-8 md:px-16 lg:px-32 md:mt-4 w-full h-20 z-40 flex items-center justify-between backdrop-blur-md rounded-b-2xl sticky top-0'
>
	<div class='flex gap-4 items-center'>
		<a href='/'>
			<Image
				src='/icons/logo.svg'
				alt='Logo de Arrecife'
				width={50}
				height={50}
			/>
		</a>
		{
			subPage && (
				<a
					href={`/${subPage.toLocaleLowerCase()}`}
					class='hidden sm:inline-block text-2xl font-splineSans-bold'
				>
					{subPage}
				</a>
			)
		}
	</div>
	<nav>
		<ul class='flex items-center gap-4 text-cold-50 hover:[&>li]:text-gray-100 [&>li]:transition-colors [&>li]:duration-75'>
			<li>
				<a href='https://github.com/dsilgadosalcedo/arrecifes-tools' target='_blank'>
					<svg
						width='44'
						height='44'
						viewBox='0 0 24 24'
						stroke-width='1.5'
						stroke='currentColor'
						fill='none'
						stroke-linecap='round'
						stroke-linejoin='round'
					>
						<path stroke='none' d='M0 0h24v24H0z' fill='none'></path>
						<path
							d='M9 19c-4.3 1.4 -4.3 -2.5 -6 -3m12 5v-3.5c0 -1 .1 -1.4 -.5 -2c2.8 -.3 5.5 -1.4 5.5 -6a4.6 4.6 0 0 0 -1.3 -3.2a4.2 4.2 0 0 0 -.1 -3.2s-1.1 -.3 -3.5 1.3a12.3 12.3 0 0 0 -6.2 0c-2.4 -1.6 -3.5 -1.3 -3.5 -1.3a4.2 4.2 0 0 0 -.1 3.2a4.6 4.6 0 0 0 -1.3 3.2c0 4.6 2.7 5.7 5.5 6c-.6 .6 -.6 1.2 -.5 2v3.5'
						></path>
					</svg>
				</a>
			</li>
		</ul>
	</nav>
</header>
