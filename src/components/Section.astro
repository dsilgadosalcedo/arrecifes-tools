---
const { sectionTitle, fullWidth, classes } = Astro.props
const margins:string = fullWidth ? '' : 'px-4 sm:px-8 md:px-16 lg:px-32'
---
<!-- class:list={['relative', {margins}, {classes: classes }]} -->
<section class=`relative ${margins} ${classes ?? classes }`>
  {
    sectionTitle && 
    <h2 class="text-white text-2xl sm:text-3xl font-splineSans-bold font-bold mb-14 ml-4">
      {sectionTitle}
    </h2>
  }
  <slot />
</section>
