---
import BaseLayout from "../../layouts/BaseLayout.astro"
import CustomLink from "../../components/CustomLink.astro"
import Section from "../../components/Section.astro"

const pageTitle = "Foto del día"
---

<BaseLayout pageTitle={pageTitle}>
	<div
		id='banner'
		class='transition-opacity duration-150 ease-in opacity-0 hover:opacity-100 fixed w-screen h-screen bg-cold-800/50 backdrop-blur-sm z-50 top-0 justify-center items-center overflow-y-scroll hidden sm:flex sm:hidden hover:cursor-pointer'
	>
		<div class='absolute top-0'>
			<div class='h-8 w-full'></div>
			<img id='banner-img' src='' class='rounded-3xl' alt='Imagen  del día' />
			<div class='h-8 w-full'></div>
		</div>
	</div>
	<Section classes='pt-10'>
		<h1
			id='apod-title'
			lang='en'
			class='text-3xl font-splineSans-bold font-bold'
		>
		</h1>
		<div class='grid md:grid-cols-5 w-full mt-4 gap-4'>
			<div class='md:col-span-2'>
				<div>
					<img
						id='apod-img'
						src=''
						alt='Tú eres la foto del día'
						class='w-full h-full rounded-3xl object-cover hover:cursor-pointer'
					/>
					<div class='m-4 flex flex-wrap gap-2'>
						<CustomLink id='link-see-hd' href='' target='_blank'>
							Ver en HD
						</CustomLink>
					</div>
				</div>
			</div>
			<div class='md:col-span-3'>
				<article class='text-lg font-splineSans-regular font-normal'>
					<section
						id='apod-explanation'
						lang='en'
						class='text-gray-100/90 font-light flex flex-col gap-2'
					>
					</section>
					<p id='apod-date' class='text-gray-300 text-sm text-end'></p>
				</article>
